{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Day 5: Build",
			"type": "shell",
			"command": "nim",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": "$nim",
			"args": [
				"c",
				"--out:${workspaceFolder}${pathSeparator}bin${pathSeparator}AdventOfCode",
				"-d:debug",
				"--debugger:native",
				"${workspaceFolder}${pathSeparator}source${pathSeparator}main.nim"
			]
		},
		{
			"label": "Day 5: Build Release",
			"type": "shell",
			"command": "nim",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": "$nim",
			"args": [
				"c",
				"-r",
				"--out:${workspaceFolder}${pathSeparator}bin${pathSeparator}AdventOfCode",
				"-d:release",
				"${workspaceFolder}${pathSeparator}source${pathSeparator}main.nim"
			]
		},
		{
			"label": "Day 5: Run",
			"type": "shell",
			"command": "nim",
			"group": "none",
			"problemMatcher": "$nim",
			"args": [
				"c",
				"-r",
				"--out:${workspaceFolder}${pathSeparator}bin${pathSeparator}AdventOfCode",
				"-d:debug",
				"--debugger:native",
				"${workspaceFolder}${pathSeparator}source${pathSeparator}main.nim",
				"${workspaceFolder}${pathSeparator}debug.txt"
			]
		}
	]
}
